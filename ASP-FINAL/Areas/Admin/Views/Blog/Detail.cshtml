@model BlogDetailVM
@{
    ViewData["Title"] = "Detail";
}


<div class="row">
    <div class="col-2"></div>
    <div class="col-10">
        <div class="container my-3">
            <h1 class="text-center">Blog detail</h1>
            <div class="slider-detail">
                <h2>Title</h2>
                <h3>@Model.Title</h3>
                <img src="~/images/blog/@Model.Image" alt="image" style="width:500px;height:300px;" />
                <h3>Description</h3>
                <h5>@Model.Description</h5>
                <h3>Created Date - @Model.CreateDate</h3>
            </div>
            <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw">Back</a>
        </div>
    </div>
</div>
