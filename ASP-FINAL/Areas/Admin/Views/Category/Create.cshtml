@using ASP_FINAL.Areas.Admin.ViewModels.Category;
@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-2"></div>
    <div class="col-10">
        <div class="container my-5">
            <form method="post" asp-controller="Category" asp-action="Create" enctype="multipart/form-data">
                <input asp-for="Images" class="form-control" />
                <span asp-validation-for="Images" class="text-danger d-block"></span>
                <textarea class="form-control" asp-for="Name" id="category-name" rows="3"></textarea>
                <span class="text-danger d-block" asp-validation-for="Name"></span>
                <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
                <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
            </form>
        </div>


    </div>
</div>
