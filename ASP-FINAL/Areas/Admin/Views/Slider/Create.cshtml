@model SliderCreateVM
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-2"></div>
    <div class="col-10">
        <div class="container my-5">
            <form method="post" asp-controller="Slider" asp-action="Create" enctype="multipart/form-data">
                <input asp-for="Images" class="form-control" />
                <span asp-validation-for="Images" class="text-danger d-block"></span>
                <input asp-for="Title" placeholder="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger d-block"></span>
                <input asp-for="Description" placeholder="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger d-block"></span>
                <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
                <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
            </form>
        </div>
    </div>
</div>

